{
  "name": "github-tasting-menu",
  "version": "0.0.1",
  "description": "Only be notified of a percentage of actions in a GitHub repository.",
  "author": "neverendingqs <neverendingqs@users.noreply.github.com> (https://github.com/neverendingqs/github-tasting-menu)",
  "license": "Apache-2.0",
  "repository": "https://github.com//github-tasting-menu.git",
  "homepage": "https://github.com//github-tasting-menu",
  "bugs": "https://github.com//github-tasting-menu/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "dev": "nodemon",
    "lint": "standard --fix",
    "now": "now",
    "start": "probot run ./index.js",
    "test": "jest --coverage",
    "posttest": "standard",
    "test:ci": "npm test && cat coverage/lcov.info | coveralls",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@chadfawcett/probot-serverless-now": "^1.0.0",
    "lodash.get": "^4.4.2",
    "probot": "^7.2.0"
  },
  "devDependencies": {
    "coveralls": "^3.0.11",
    "jest": "^25.3.0",
    "js-yaml": "^3.13.1",
    "nock": "^12.0.3",
    "nodemon": "^2.0.3",
    "now": "^17.1.1",
    "smee-client": "^1.1.0",
    "standard": "^14.3.3"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "nodemonConfig": {
    "exec": "npm start",
    "watch": [
      ".env",
      "."
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
